generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id        String   @id @default(uuid())
  name        String
  identCode   String?
  legalAddress String?
  country      String?
  city         String?
  activityField String?
  brandName   String?
  logo        String? // Base64 or URL
  interviewDate DateTime?
  
  updatedAt   DateTime @updatedAt
  branches  Branch[]
}

model Branch {
  id          String       @id @default(uuid())
  name        String
  companyId   String
  company     Company      @relation(fields: [companyId], references: [id])
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  departments Department[]
  users       User[]
  members     Member[]
  passes      Pass[]
}

model Department {
  id        String   @id @default(uuid())
  name      String
  branchId  String
  branch    Branch   @relation(fields: [branchId], references: [id])
  roles     Role[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id          String       @id @default(uuid())
  name        String
  departmentId String
  department  Department   @relation(fields: [departmentId], references: [id])
  permissions Permission[]
  users       User[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Permission {
  id          String   @id @default(uuid())
  action      String   // e.g. "read", "create", "manage"
  subject     String   // e.g. "User", "Client", "all"
  conditions  Json?    // CASL conditions
  fields      Json?    // Permitted fields (or excluded fields if inverted?) - CASL uses fields for "can read only these fields"
  inverted    Boolean  @default(false) // e.g. "cannot"
  reason      String?  // Optional explanation
  roleId      String
  role        Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  
  firstName String
  lastName  String
  phone     String?
  
  // Relations
  branchId  String
  branch    Branch   @relation(fields: [branchId], references: [id])
  
  roleId    String?
  role      Role?    @relation(fields: [roleId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- Migrated Models ---

model Member {
  id        String   @id @default(uuid())
  
  // Personal Info
  name      String
  email     String?
  phone     String?
  personalId String?
  citizenship String @default("GE")
  passportNumber String?
  address   String?
  photo     String?
  
  // Status
  status    String   @default("Active") // Active, Inactive, Banned
  joinedDate DateTime @default(now())
  
  // Corporate
  isCorporate Boolean @default(false)
  companyName String?
  groupId     String?
  groupType   String?

  // Guardian (Minors)
  guardianFirstName String?
  guardianLastName  String?
  guardianPersonalId String?
  guardianPhone     String?

  // Access Control
  accessMobile   Boolean @default(false)
  accessBracelet Boolean @default(false)
  accessCard     Boolean @default(false)
  braceletCode   String?
  cardCode       String?

  // Medical
  healthCert     String? // URL
  birthCert      String? // URL
  bloodGroup     String? // 1-Unknown, 2-O+, etc.
  isPwd          Boolean @default(false)
  clothingSize   String? // XS, S, M, L, XL, XXL
  source         String? // How they heard about us

  // Relations
  branchId  String
  branch    Branch   @relation(fields: [branchId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pass {
  id          String   @id @default(uuid())
  title       String
  price       Decimal  @db.Decimal(10, 2)
  duration    Int      // in days
  description String?
  features    String?
  active      Boolean  @default(true)
  
  // Type & Schedule
  type        String   @default("INDIVIDUAL") // INDIVIDUAL, GROUP, CALENDAR, MIXED
  timeMode    String   @default("full")       // full, custom
  startTime   String?  // "09:00"
  endTime     String?  // "22:00"
  days        String[] // ["Mon", "Wed"]

  // Restrictions
  maxParticipants Int @default(1)
  targetAge       String?
  targetStatus    String?

  // Relations
  branchId  String
  branch    Branch   @relation(fields: [branchId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Supplier {
  id            String   @id @default(uuid())
  name          String
  contactPerson String?
  phone         String?
  category      String?
  status        String   @default("Active")
  
  warehouseItems WarehouseItem[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model WarehouseItem {
  id          String   @id @default(uuid())
  name        String
  category    String   // GROCERY, MATERIAL, ACCESSORY, SUPPLIER (for older logic, but Supplier is separate now)
                         // Actually the frontend sends 'GROCERY', 'MATERIAL', 'ACCESSORY' as 'category' payload field for Item, 
                         // but for Supplier it calls a different endpoint or same with type?
                         // Frontend calls POST /api/warehouse with payload. 
                         // Handler in frontend separates them.
  
  // Common
  quantity    Int      @default(0)
  price       Decimal? @db.Decimal(10, 2)
  
  // Grocery
  weight      String?
  unit        String?
  
  // Material
  condition   String?
  note        String?
  
  // Relations
  supplierId  String?
  supplier    Supplier? @relation(fields: [supplierId], references: [id])
  deliveryDate DateTime?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  productIngredients ProductIngredient[]
}


model Product {
  id          String   @id @default(uuid())
  name        String
  totalCost   Decimal? @db.Decimal(10, 2)
  
  ingredients ProductIngredient[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProductIngredient {
  id              String   @id @default(uuid())
  
  productId       String
  product         Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  warehouseItemId String
  warehouseItem   WarehouseItem @relation(fields: [warehouseItemId], references: [id])
  
  quantity        Decimal  @db.Decimal(10, 3)
  unit            String
  
  calculatedCost  Decimal  @db.Decimal(10, 2)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
